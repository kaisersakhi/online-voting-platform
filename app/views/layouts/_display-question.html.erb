<div class="bg-white shadow-lg mt-2 rounded-lg">
  <div class="p-2 pl-4">
    <h3 class="text-xl font-semibold text-gray-600"><%= question.question_name %></h3>
    <p class="text-gray-500 text-sm font-medium"><%= question.question_description %></p>

    <% question.options.each do |option| %>
      <ul class="mt-3">
        <li>
          <div class="flex justify-between px-8 bg-gray-200 rounded">
            <%= option.name %>
            <span class="btn btn-outline-success">
              Votes: <%= option.total_vote_count %> / <%= total_votes %>
            </span>
          </div>
        </li>
      </ul>
    <% end %>
  </div>

</div>