<div class="main-body">

  <div class="election-heading">
    <h3><%= election.name %></h3>
    <%= form_with(url: "/elections/#{election.id}/launch", method: "PATCH") do %>
      <button class="btn btn-outline-success" onclick="this.form.submit()">Launch</button>
    <% end %>
  </div>

  <%= form_with url: add_question_path(id: election.id), method: :post do %>
    <input type="number" name="question_id" value="-1" hidden>
    <div class="form-group">
      <label for="questionName">Question Name</label>
      <input name="question_name" type="text" class="form-control" id="questionName" placeholder="Question?" required>
    </div>
    <div class="form-group">
      <label for="questionDescription">Description</label>
      <input name="question_description" class="form-control" id="questionDescription" placeholder="Description" required>
    </div>

    <div class="form-group">
      <label for="option">Options:</label>
      <input type="text" id="option" name="options" class="form-control" placeholder="option 1, option 2, ..., option n" required>
      <div id="emailHelp" class="form-text">Separate each option with a comma.</div>

    </div>
    <button style="margin-top: 20px; width: 100%;" type="submit" class="btn btn-primary">Add</button>
  <% end %>




  <% election.questions.each do |question| %>
    <div class="saved-questions">
      <div class="question-with-options">
        <h3><%= question.question_name %></h3>
        <p><%= question.question_description %></p>

        <% question.options.each do |option| %>
          <ul>
            <li>
              <%= option.name %>
            </li>
          </ul>
        <% end %>
      </div>

      <div class="question-controls">
        <form action="/election/<%= election.id %>/question/<%= question.id %>/edit" method="get">
          <input type="button" class="btn btn-secondary" value="Update" onclick="this.form.submit()">
        </form>

        <%= form_with(url: "/election/#{election.id}/question/#{question.id}", method: "DELETE") do %>
          <input type="button" class="btn btn-danger" value="Delete " onclick="this.form.submit()">
        <% end %>
      </div>
    </div>
  <% end %>
</div>

<script type="text/javascript" charset="utf-8">

</script>